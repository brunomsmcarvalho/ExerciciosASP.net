@model Exercicio9ASP.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h1 style="background: linear-gradient(90deg, #0d6efd 20%,#0E08B0 60% , #6610f2 100%); display:inline-block;color: white">Apagar</h1>
    <br />
    <h3 style="background: linear-gradient(90deg, #0d6efd 20%,#0E08B0 60% , #6610f2 100%); display:inline-block;color: white">
        Tem a certeza que deseja apagar esta entrada?</h3><br/>
    
    <hr />
</div>
<h4 style="background: linear-gradient(90deg, #0d6efd 40%, #6610f2 100%); display:inline-block;color:white">Alunos</h4>
    <div style="background: rgba(255,255,255,0.7); border-radius: 10px; padding: 20px;">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Curso)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Curso)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index" style="color: white; font-weight: bold;">Voltar à lista</a>
    </form>
</div>
